# Environment variables for Spotify Stop AI
# Copy this file to .env and fill in your credentials

# Spotify App Credentials
# Create an app at https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id_here

# Optional: Client secret (if not using PKCE flow)
# SPOTIFY_CLIENT_SECRET=your_client_secret_here

# Last.fm API Key (optional, for Last.fm source)
# Create an API account at https://www.last.fm/api/account/create
LASTFM_API_KEY=your_lastfm_api_key_here

# Ollama settings (optional, for local LLM fallback)
OLLAMA_HOST=http://127.0.0.1:11434
